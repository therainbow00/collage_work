@model GameModel

@{
    ViewData["Title"] = "Game Page";
}


<div class="text-center">
    <h1 class="display-4">Scramble</h1>

    <h3 class="guess-character">Guess a Character: </h3>
    <form action="@Url.Action("Add")" method="post">
        <input type="text" name="guess" placeholder="Enter character"</>
        <button type="submit">Enter</button>
    </form>
    <p class="guessed">Guessed letters:
        @foreach (var character in Model.usersWord)
        {
            <span>@character</span>
        }
    </p>
    <p class="word">Word: @Model.Word</p>
    <p class="wordScrambled">Word scrambled: @Model.wordScrambled</p>
    <p class="length">Length: @Model.usersWord.Count</p>
    <p class="in-letter-form">Word in letter form: 
        @foreach (var character in Model.Word)
        {
            <span>@character</span>
        }
    </p>

